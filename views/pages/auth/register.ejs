<%- include('../../components/header.ejs') %>

<div class="bg-zinc-900 w-full h-screen">
    <div class="flex flex-col items-center pt-20 pb-10">
        <img class="w-48" src="./assets/static/logo.png" alt="">
        <p class="px-16 text-center text-zinc-500 font-semibold leading-4 py-3">Sign up to see photos and videos from your friends.</p>
    </div>
    <form action="/auth/register" method="post" class="flex flex-col items-center text-sm gap-3">
        <% if(success.length> 0){ %>
            <p class="bg-green-300 w-72 p-1"><%= success %></p>
            <% }else if(fail.length> 0){ %>
            <p class="bg-red-300 w-72 p-1"><%= fail %></p>
            <% } %>
        <input required type="text" name="email" placeholder="Email Address" class="outline-none border-zinc-600 px-2 py-2 focus:border-zinc-300 text-zinc-300 rounded w-72 border-2 bg-zinc-800">
        <input type="text" name="phone" placeholder="Mobile Number" class="outline-none border-zinc-600 px-2 py-2 focus:border-zinc-300 text-zinc-300 rounded w-72 border-2 bg-zinc-800">
        <input required type="text" name="name" placeholder="Full name" class="outline-none border-zinc-600 px-2 py-2 focus:border-zinc-300 text-zinc-300 rounded w-72 border-2 bg-zinc-800">
        <input required type="text" name="username" placeholder="username" class="outline-none border-zinc-600 px-2 py-2 focus:border-zinc-300 text-zinc-300 rounded w-72 border-2 bg-zinc-800">
        <input required type="password" name="password" placeholder="password" class="outline-none border-zinc-600 px-2 py-2 focus:border-zinc-300 text-zinc-300 rounded w-72 border-2 bg-zinc-800">
        <p class="text-zinc-500 px-10 pt-2 leading-5 text-center">People who use our service may have uploaded your contact information to Instagram.</p>
        <p class="text-zinc-500 px-10 py-2 leading-5 text-center">By signing up, you agree to our <a href="" class="text-sky-600 hover:underline">Terms</a> , <a href="" class="text-sky-600 hover:underline">Privacy Policy</a> and <a href="" class="text-sky-600 hover:underline">Cookies Policy</a> .</p>
        <button type="submit" class="bg-sky-600 w-72 py-1 text-zinc-300 hover:bg-sky-700 font-semibold ">Register</button>
        <a class="text-sky-600 mt-2 hover:underline" href="">forget password</a>
        <p class="text-zinc-300 mt-4">Already have an account? <a href="/login" class="text-sky-600 hover:underline">Login</a></p>
    </form>
</div>

<%- include('../../components/footer.ejs') %>